                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="5">
                        <Border BorderBrush="#000000" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0">
